systemlabel  water
verbosity    1

eigmin_local    1E-5  !! Threshold for local products.
eigmin_bilocal  1E-6  !! Threshold for bilocal products.
jcutoff         14
check_basis     1

gwa_initialization      siesta_pb    ! sets the GWA to read siesta input

prod_basis_type         MIXED  AC_DIRECT   MIXED   AC_DIRECT   DOMIPROD
prod_basis_procedure    ONLY-PB
dealloc_bilocal         1

DOS_compute             1
DOS_Zero_Level          Vacuum   Fermi  (Vacuum)

xc_functional          LDA   HF
xc_authors             CA    HF

do_tddft_iter           0

do_scf                  0   ! Parameters for SCF 
  Poisson.Method         OBC.PB

  xc_me_algorithm        EQU_RSPACE   ATOMS  (EQU_RSPACE)
  MeshCutoff             3400
  xc_functional_siesta   GGA
  xc_authors_siesta      PBE

  MaxSCFiterations       50
  DM_MixingWeight        0.5
  UseSaveDM               1
  ndiis                   0
  scf_MixingWeight        0.5
  scf_MixingAlgorithm     ODA
  scf_tolerance           1e-6

do_qsGW                    0  ! Parameters for GW with spectral functions

  plot_pdos_fin            1   ! Plot PDOS resolved in angular momentum of atomic orbitals
  
  d_omega_win1           0.12  ! Limit for target window.
  omega_max_win1_factor  1.15   !2.5 !4.0 !2.1 !2.5 !2.1 !2.5

  chi0_zip_tolerance    1e-2  ! nonlocal compresion
  chi0_zip_EH_or_EF     1 
  chi0_zip_algorithm    1
  chi0_zip_FmE_cutoff   35.0
  alloc_chi0_win1       false  ! seems necessary for export_bse to work!
  alloc_chi0_win1_zip   true !false
  alloc_chi0_win2       false !fasle
  alloc_chi0_win2_zip   false !false

  MaxSCFIterations_qsgw      0 !100
  MaxscGWIterations          1 !100
  export_qsGW_bse            0
  comp_poles_iter            1

  comp_G0W0_poles_init_wfs  KS !HF_DIAG !KS !W0_DIAG !KS

  comp_gwa_ev_scgw            1
  comp_gwa_ev_scgw_maxiter    1 !20
  comp_gwa_ev_scgw_eig_mode   ALLZEROS ! SIGMA_AT_KS_Z !NEWTON !SIGMA_AT_KS_Z_SELECT !_Z_SELECT !_SELECT_BROAD !_Z !_Z !_LINBROAD !SIGMA_AT_KS_Z_SELECT_BROAD
  comp_gwa_ev_scgw_mixcoeff   1.0    !0.5
  comp_gwa_ev_scgw_scissor    0      !2
  comp_gwa_ev_scgw_tol        1d-2

